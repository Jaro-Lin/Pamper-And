<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_index_bg"
    tools:context=".activity.shop.ShopDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/btn_back"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/share_my_img"/>
    </LinearLayout>



    <com.nyw.pets.view.XCRecyclerView
        android:id="@+id/xcr_dataImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_goods_fits_car"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px">
        <ImageView
            android:id="@+id/iv_myShopCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:src="@mipmap/shopping_cart_img"/>
        <TextView
            android:id="@+id/good_numtv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/sp_common_circle2yellow"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginLeft="@dimen/_60px"
            android:src="@mipmap/customer_service_img"/>
        <Button
            android:id="@+id/btn_addShopCart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_60px"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/_60px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:textColor="@color/write"
            android:background="@drawable/get_add_shop_cart_gb"
            android:layout_gravity="center_vertical"
            android:text="加入购物车"/>
        <Button
            android:id="@+id/btn_buy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/write"
            android:textSize="14sp"
            android:layout_marginRight="@dimen/_30px"
            android:background="@drawable/get_add_shop_buy_gb"
            android:layout_marginLeft="@dimen/_30px"
            android:text="立即购买"/>
    </LinearLayout>



</LinearLayout>