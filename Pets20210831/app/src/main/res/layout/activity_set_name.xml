<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.user.SetNameActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/main_color"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:src="@mipmap/btn_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="标题"
            android:gravity="center"
            android:textSize="@dimen/_32px"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@mipmap/actionbar_back"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_46px">
        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_inputBody"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_102px"
            android:background="@color/write"
            android:layout_marginRight="@dimen/_24px"
            android:layout_marginLeft="@dimen/_24px"
            android:hint="请输入内容"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginTop="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:textSize="@dimen/_32px"
        android:text="确定"
        android:background="@drawable/ok_gb"/>

</LinearLayout>