<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    tools:context=".activity.user.WithdrawalActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:src="@mipmap/btn_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提现"
            android:gravity="center"
            android:textSize="@dimen/_36px"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@mipmap/actionbar_back"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_60px"
        android:layout_marginTop="@dimen/_30px"
        android:textColor="@color/black"
        android:text="当前可提现额： 00.00"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
         android:layout_marginTop="@dimen/_30px"
        android:orientation="vertical">


    <com.nyw.pets.view.ClearEditText
        android:id="@+id/ct_inputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_60px"
        android:layout_marginRight="@dimen/_60px"
        android:layout_marginTop="@dimen/_60px"
        android:background="@color/write"
        android:hint="请输入您的真实姓名"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px"
            android:layout_marginTop="@dimen/_60px"
            android:background="@color/gray_bg"/>

        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_inputPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:layout_marginRight="@dimen/_60px"
            android:layout_marginTop="@dimen/_60px"
            android:background="@color/write"
            android:hint="请输入您的支付宝账号"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px"
            android:layout_marginTop="@dimen/_60px"
            android:background="@color/gray_bg"/>

        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_inputMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:layout_marginRight="@dimen/_60px"
            android:layout_marginTop="@dimen/_60px"
            android:background="@color/write"
            android:layout_marginBottom="@dimen/_60px"
            android:hint="请输入提现金额"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginRight="@dimen/_60px"
        android:layout_marginLeft="@dimen/_60px"
        android:lineSpacingExtra="@dimen/_8px"
        android:text="* 温馨提醒： 请认真检查您的真实姓名与支付宝账号，输入错误无法提现。"
        android:textColor="@color/red"/>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_60px"
        android:layout_marginLeft="@dimen/_60px"
        android:layout_marginTop="@dimen/_160px"
        android:background="@drawable/login_btn_bg"
        android:textColor="@color/white"
        android:text="确定提现"/>


</LinearLayout>