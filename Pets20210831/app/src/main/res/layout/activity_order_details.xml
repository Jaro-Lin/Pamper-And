<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".activity.shop.OrderDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/btn_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30px"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:text="订单详情"/>
        <ImageView
            android:id="@+id/iv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/customer_service_img"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_20px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:text="货物状态"/>
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:text="已发货"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_10px"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30px"
            android:src="@mipmap/location_img"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginBottom="@dimen/_10px"
            android:layout_marginTop="@dimen/_30px"
            android:text="阿芙蓉"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_10px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:text="15777121221"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_30px"
                android:layout_marginBottom="@dimen/_30px"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="广西壮族自治区南宁市西乡塘区华尔街工谷"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_20px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:text="订单信息"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:text="订单编号"/>
        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:text="15191919116161131"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:text="物流单号"/>
        <TextView
            android:id="@+id/tv_logistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:text="15191891112161618119"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:text="订单创建时间"/>
        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:text="2020-03-24 11:12:45"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:text="付款时间"/>
        <TextView
            android:id="@+id/tv_pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:text="2020-03-25 11:12:45"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginBottom="@dimen/_30px"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancelOrder"
            android:layout_width="@dimen/_170px"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/write"
            android:visibility="gone"
            android:background="@drawable/get_add_pets_gb"
            android:text="取消订单"/>
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="@dimen/_170px"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/write"
            android:layout_marginLeft="@dimen/_30px"
            android:visibility="gone"
            android:background="@drawable/get_add_pets_gb"
            android:text="去付款"/>
        <Button
            android:id="@+id/btn_after_sales"
            android:layout_width="@dimen/_170px"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/write"
            android:layout_marginLeft="@dimen/_30px"
            android:background="@drawable/get_add_pets_gb"
            android:visibility="gone"
            android:text="申请售后"/>
        <Button
            android:id="@+id/btn_delivery"
            android:layout_width="@dimen/_170px"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/write"
            android:layout_marginLeft="@dimen/_30px"
            android:visibility="gone"
            android:background="@drawable/get_add_pets_gb"
            android:text="提醒发货"/>

        <Button
            android:id="@+id/btn_logistics"
            android:layout_width="@dimen/_200px"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/write"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_30px"
            android:background="@drawable/get_add_pets_gb"
            android:text="复制物流单号"/>

        <Button
            android:id="@+id/btn_ok_goods"
            android:layout_width="@dimen/_170px"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/write"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_30px"
            android:background="@drawable/get_add_pets_gb"
            android:text="确认收货"/>

        <Button
            android:id="@+id/btn_evaluation"
            android:layout_width="@dimen/_170px"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/write"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_30px"
            android:background="@drawable/get_add_pets_gb"
            android:text="立即评价"/>
    </LinearLayout>




</LinearLayout>