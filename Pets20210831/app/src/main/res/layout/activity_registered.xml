<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.user.RegisteredActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_back"
            android:visibility="visible" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="注册"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:gravity="center"
        android:orientation="horizontal">
        <com.nyw.pets.view.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/dog_reg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:layout_marginLeft="@dimen/_10px"
            android:textColor="@color/black"
            android:textSize="28sp" />
        <com.nyw.pets.view.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10px"
            android:src="@mipmap/cat_reg"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_30px"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_100px"
        android:gravity="center"
        android:background="@drawable/user_phone_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:src="@mipmap/user_name_img" />
        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_user_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_112px"
            android:layout_weight="1"
            android:background="@color/write"
            android:hint="请输入用户呢称" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginLeft="@dimen/_112px"
        android:layout_marginRight="@dimen/_60px"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_50px"
        android:gravity="center"
        android:background="@drawable/user_phone_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:src="@mipmap/phone_icon" />
        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_phone"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_weight="1"
            android:background="@color/write"
            android:hint="请输入手机号码" />
        <Button
            android:id="@+id/btn_sendCode"
            android:layout_width="@dimen/_180px"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/white"
            android:background="@drawable/login_btn_bg"
            android:layout_marginRight="@dimen/_20px"
            android:text="发送验证码"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginLeft="@dimen/_112px"
        android:layout_marginRight="@dimen/_60px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_50px"
        android:gravity="center"
        android:background="@drawable/user_phone_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:src="@mipmap/my_code_img" />
        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_input_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_62px"
            android:background="@color/write"
            android:hint="请输入手机验证码" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginLeft="@dimen/_112px"
        android:layout_marginRight="@dimen/_60px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_50px"
        android:gravity="center"
        android:background="@drawable/user_phone_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:src="@mipmap/password_icon" />

        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_inputPassword"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_112px"
            android:layout_weight="1"
            android:background="@color/write"
            android:hint="请输入登录密码"
            android:password="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginLeft="@dimen/_112px"
        android:layout_marginRight="@dimen/_60px"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_50px"
        android:gravity="center"
        android:background="@drawable/user_phone_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:src="@mipmap/password_icon" />

        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_input2Password"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_112px"
            android:layout_weight="1"
            android:background="@color/write"
            android:hint="请在次输入登录密码"
            android:password="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginLeft="@dimen/_112px"
        android:layout_marginRight="@dimen/_60px"
        android:background="@color/gray" />
    <LinearLayout
        android:id="@+id/llt_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_50px"
        android:gravity="center"
        android:background="@drawable/user_phone_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:src="@mipmap/sex_img" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_112px"
            android:layout_weight="1"
            android:background="@color/write"
            android:layout_gravity="center_vertical"
            android:text="请选择性别"
            android:textColor="@color/txt" />
        <ImageView
            android:id="@+id/iv_next_data_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_50px"
            android:src="@mipmap/next_data_img"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginLeft="@dimen/_112px"
        android:layout_marginRight="@dimen/_60px"
        android:background="@color/gray" />
    <LinearLayout
        android:id="@+id/llt_my_create_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_50px"
        android:gravity="center"
        android:background="@drawable/user_phone_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:src="@mipmap/my_create_data" />

        <TextView
            android:id="@+id/tv_create_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_112px"
            android:layout_weight="1"
            android:background="@color/write"
            android:layout_gravity="center_vertical"
            android:text="请选择出生日期"
            android:textColor="@color/txt" />
        <ImageView
            android:id="@+id/iv_next_data_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_50px"
            android:src="@mipmap/next_data_img"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginLeft="@dimen/_112px"
        android:layout_marginRight="@dimen/_60px"
        android:background="@color/gray" />
    <LinearLayout
        android:id="@+id/llt_my_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_50px"
        android:gravity="center"
        android:background="@drawable/user_phone_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:src="@mipmap/city_img" />

        <TextView
            android:id="@+id/tv_my_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_112px"
            android:layout_weight="1"
            android:background="@color/write"
            android:layout_gravity="center_vertical"
            android:text="请选择所在城市"
            android:textColor="@color/txt" />
        <ImageView
            android:id="@+id/iv_next_data_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_50px"
            android:src="@mipmap/next_data_img"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginLeft="@dimen/_112px"
        android:layout_marginRight="@dimen/_60px"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_60px">
        <CheckBox
            android:id="@+id/cb_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:button="@null"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/checkbox_selector" />
        <TextView
            android:id="@+id/tv_readUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px"
            android:layout_gravity="center_vertical"
            android:textColor="@color/red"
            android:text="注册即代表您已同意《用户协议》"/>
    </LinearLayout>


    <Button
        android:id="@+id/btn_registered"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px"
        android:layout_marginLeft="@dimen/_74px"
        android:layout_marginTop="@dimen/_100px"
        android:layout_marginRight="@dimen/_74px"
        android:layout_marginBottom="@dimen/_80px"
        android:background="@drawable/login_btn_bg"
        android:text="提交注册"
        android:textColor="@color/write"
        android:textSize="@dimen/_36px" />
    </LinearLayout>
    </ScrollView>

</LinearLayout>