<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_20px"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llt_shopInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_shopImg"
            android:layout_width="@dimen/_200px"
            android:layout_height="@dimen/_200px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:scaleType="centerCrop"
            android:src="@mipmap/http_error"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_20px"
                android:layout_marginTop="@dimen/_30px"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="狗狗食物超级好吃的零食营养的食物优惠"/>

            <TextView
                android:id="@+id/tv_specifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt"
                android:layout_marginLeft="@dimen/_20px"
                android:layout_marginTop="@dimen/_80px"
                android:text="规格:1000 g"/>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="售后类型"/>
            <TextView
                android:id="@+id/tv_stateType"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="申请退款"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="退款金额"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="￥ 19.9"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="退款状态"/>
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="已退款"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_20px"
            android:layout_marginBottom="@dimen/_30px"
            android:orientation="horizontal">


        <Button
            android:id="@+id/btn_del"
            android:layout_width="@dimen/_200px"
            android:layout_height="@dimen/_70px"
            android:background="@drawable/get_del_shop_ok_gb"
            android:textColor="@color/write"
            android:text="删除记录"/>
            <Button
                android:id="@+id/btn_logistics"
                android:layout_width="@dimen/_200px"
                android:layout_height="@dimen/_70px"
                android:background="@drawable/get_add_pets_gb"
                android:layout_marginLeft="@dimen/_60px"
                android:textColor="@color/write"
                android:text="填写物流单号"/>

        <Button
            android:id="@+id/btn_read"
            android:layout_width="@dimen/_200px"
            android:layout_height="@dimen/_70px"
            android:background="@drawable/get_add_pets_gb"
            android:layout_marginLeft="@dimen/_60px"
            android:textColor="@color/write"
            android:text="查看详情"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
