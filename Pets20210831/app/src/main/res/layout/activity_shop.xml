<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_index_bg"
    tools:context=".activity.ShopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/write"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_10px"
            android:layout_marginBottom="@dimen/_10px"
            android:src="@mipmap/donghead"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_10px"
        android:layout_marginBottom="@dimen/_10px"
        android:layout_marginLeft="@dimen/_20px"
        android:text="狗"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_20px"
            android:layout_marginTop="@dimen/_10px"
            android:layout_marginBottom="@dimen/_10px"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="商城"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:visibility="invisible"
            android:layout_marginRight="@dimen/_20px"
            android:layout_marginLeft="@dimen/_20px"
            android:layout_marginTop="@dimen/_10px"
            android:layout_marginBottom="@dimen/_10px"
            android:text="狗狗"/>
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_10px"
            android:layout_marginBottom="@dimen/_10px"
            android:src="@mipmap/search_shop_img"/>


    </LinearLayout>
    <com.zhouwei.mzbanner.MZBannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240px"
        app:canLoop="true"
        app:indicatorAlign="center"
        app:middle_page_cover="false"
        app:open_mz_mode="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llt_food"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="@dimen/_100px"
                android:layout_height="@dimen/_100px"
                android:gravity="center"
                android:background="@drawable/get_curriculum_into_type_btn_gb">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/food_img_shop"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10px"
                android:textColor="@color/black"
                android:text="主食"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llt_snacks"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="@dimen/_100px"
                android:layout_height="@dimen/_100px"
                android:gravity="center"
                android:background="@drawable/get_curriculum_into_type_btn_gb">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/snacks_img"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10px"
                android:textColor="@color/black"
                android:text="零食"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/llt_clean"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="@dimen/_100px"
                android:layout_height="@dimen/_100px"
                android:gravity="center"
                android:background="@drawable/get_curriculum_into_type_btn_gb">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/clean_img_shop"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10px"
                android:textColor="@color/black"
                android:text="清洁"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/llt_nutrition"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="@dimen/_100px"
                android:layout_height="@dimen/_100px"
                android:gravity="center"
                android:background="@drawable/get_curriculum_into_type_btn_gb">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/nutrition_shop_img"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10px"
                android:textColor="@color/black"
                android:text="营养"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/llt_clearer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="@dimen/_100px"
                android:layout_height="@dimen/_100px"
                android:gravity="center"
                android:background="@drawable/get_curriculum_into_type_btn_gb">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/clearer_shop_img"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10px"
                android:textColor="@color/black"
                android:text="养宠必备"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20px"
        android:background="@color/write">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/llt_preferential"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20px"
        android:background="@color/write"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_20px"
            android:layout_marginBottom="@dimen/_20px"
            android:text="限时优惠"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30px"
            android:textColor="#23A0F0"
            android:text="查看更多>>"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llt_hot_cakes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20px"
        android:background="@color/write"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_20px"
            android:layout_marginBottom="@dimen/_20px"
            android:text="热销榜"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30px"
            android:textColor="#23A0F0"
            android:text="查看更多>>"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/write">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_hot_cakes"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_height="wrap_content"/>

    </LinearLayout>




</LinearLayout>