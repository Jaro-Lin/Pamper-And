<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".activity.shop.SendShopEvaluationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/btn_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30px"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:text="评价商品"/>
        <ImageView
            android:id="@+id/iv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:src="@mipmap/customer_service_img"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llt_shop_info_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_20px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_shopImg"
            android:layout_width="@dimen/_150px"
            android:layout_height="@dimen/_150px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30px"
            android:scaleType="centerCrop"
            android:src="@mipmap/http_error"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="狗狗食物超级好吃的零食营养的食物优惠"/>
            <TextView
                android:id="@+id/tv_spe_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt"
                android:layout_marginBottom="@dimen/_10px"
                android:layout_marginTop="@dimen/_10px"
                android:layout_marginLeft="@dimen/_30px"
                android:text="规格:1000 g"/>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_20px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:text="商品评价"/>


        <LinearLayout
            android:id="@+id/llt_good"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60px"
            android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:src="@mipmap/high_praise_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:textColor="#23A0F0"
            android:layout_marginLeft="@dimen/_10px"
            android:text="好评"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llt_middle_evaluation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:src="@mipmap/evaluation_of_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:layout_marginLeft="@dimen/_10px"
                android:text="中评"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_difference_evaluation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:src="@mipmap/bad_review_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:layout_marginLeft="@dimen/_10px"
                android:text="差评"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_20px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_200px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:text="商品评论"/>
        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/_200px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:hint="请输入对商品的评论内容..."/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_10px"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_img"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_addImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_60px"
            android:layout_marginTop="@dimen/_60px"
            android:layout_marginBottom="@dimen/_60px"
            android:src="@mipmap/update_shop_img"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/_250px"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/write"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:layout_marginBottom="@dimen/_30px"
            android:background="@drawable/get_add_pets_gb"
            android:text="提交评价"/>


    </LinearLayout>


</LinearLayout>