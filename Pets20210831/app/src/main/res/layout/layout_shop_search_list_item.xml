<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:background="@color/my_index_bg"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/write"
        android:layout_marginLeft="@dimen/_15px"
        android:layout_marginRight="@dimen/_15px"
        android:layout_marginTop="@dimen/_20px"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/_250px"
            android:layout_height="@dimen/_250px"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_gravity="center"
            android:src="@mipmap/http_error"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_10px"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="狗狗食物超级好吃的零食营养的食物优惠"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_10px"
            android:layout_marginBottom="@dimen/_30px"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:gravity="left"
            android:textSize="12sp"
            android:text="￥6694"/>
        <TextView
            android:id="@+id/tv_preferential"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:textColor="@color/txt"
            android:text="￥266"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/iv_add_shopCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30px"
                android:src="@mipmap/shopping_cart_img"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
