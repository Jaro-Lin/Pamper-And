<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/write"
    tools:context=".activity.user.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_back"
        android:visibility="visible" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="登录"/>
    </LinearLayout>
    <com.nyw.pets.view.RoundImageView
        android:layout_width="@dimen/_200px"
        android:layout_height="@dimen/_200px"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_60px"
        android:src="@mipmap/round_logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_100px"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_50px"
        android:layout_marginRight="@dimen/_50px"
        android:background="@drawable/user_phone_btn_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50px"
            android:src="@mipmap/phone_icon" />
    <com.nyw.pets.view.ClearEditText
        android:id="@+id/ct_phone_login"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_20px"
        android:layout_weight="1"
        android:background="@color/write"
        android:hint="请输入手机号码" />
        <Button
            android:id="@+id/btn_sendCode"
            android:layout_width="@dimen/_180px"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@drawable/login_btn_bg"
            android:layout_marginRight="@dimen/_20px"
            android:text="发送验证码"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginLeft="@dimen/_112px"
        android:layout_marginRight="@dimen/_60px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_60px"
        android:gravity="center"
        android:background="@drawable/user_phone_btn_bg"
        android:layout_marginLeft="@dimen/_50px"
        android:layout_marginRight="@dimen/_50px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50px"
            android:src="@mipmap/password_icon" />

        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_inputPassword"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_112px"
            android:layout_weight="1"
            android:background="@color/write"
            android:hint="请输入密码"
            android:password="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginLeft="@dimen/_112px"
        android:layout_marginRight="@dimen/_60px"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_switch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/register_user_btn"
            android:layout_marginLeft="@dimen/_74px"
            android:text="切换登录方式"/>
        <TextView
            android:id="@+id/tv_forgotPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/register_user_btn"
            android:gravity="right"
            android:layout_marginRight="@dimen/_74px"
            android:text="忘记密码？"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px"
        android:layout_marginLeft="@dimen/_200px"
        android:layout_marginTop="@dimen/_104px"
        android:layout_marginRight="@dimen/_200px"
        android:background="@drawable/login_btn_bg"
        android:text="登录"
        android:textColor="@color/write"
        android:textSize="@dimen/_36px" />
    <Button
        android:id="@+id/btn_registered"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px"
        android:layout_marginLeft="@dimen/_200px"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginRight="@dimen/_200px"
        android:layout_marginBottom="@dimen/_80px"
        android:background="@drawable/register_btn_bg"
        android:text="注册"
        android:textColor="@color/write"
        android:textSize="@dimen/_36px" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_60px"
        android:layout_marginRight="@dimen/_60px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_30px"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_5px"
            android:layout_weight="1"
            android:background="@color/gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:text="其他方式登录"/>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_5px"
            android:layout_weight="1"
            android:background="@color/gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_80px"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_wenxinLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/weixin_img"/>
        <ImageView

            android:id="@+id/iv_qq_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/_80px"
            android:src="@mipmap/qq_img"/>
    </LinearLayout>

</LinearLayout>