<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".activity.SetupActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/main_color"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:src="@mipmap/actionbar_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的设置"
            android:gravity="center"
            android:textSize="@dimen/_32px"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@mipmap/actionbar_back"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_30px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/_30px"
            android:text="修改密码"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/next_img"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_30px"
        android:background="@color/gray_vlue"/>
        <LinearLayout
            android:id="@+id/llt_changePayPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_30px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginLeft="@dimen/_30px"
                android:text="修改支付密码"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/next_img"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px"
            android:layout_marginTop="@dimen/_30px"
            android:background="@color/gray_vlue"/>


        <LinearLayout
        android:id="@+id/llt_userAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_30px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/_30px"
            android:text="用户协议"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/next_img"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px"
            android:layout_marginTop="@dimen/_30px"
            android:background="@color/gray_vlue"/>

        <LinearLayout
            android:id="@+id/llt_appUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_30px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginLeft="@dimen/_30px"
                android:text="版本更新"/>
            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_30px"
                android:text="1.0.0"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/next_img"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30px"
        android:layout_marginTop="@dimen/_30px"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:id="@+id/llt_loginOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_marginRight="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_30px"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_30px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/_30px"
            android:text="退出登录"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:src="@mipmap/next_img"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>