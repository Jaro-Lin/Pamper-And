<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_10px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/_150px"
            android:layout_height="@dimen/_150px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30px"
            android:scaleType="centerCrop"
            android:src="@mipmap/http_error"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="狗狗食物超级好吃的零食营养的食物优惠"/>
            <TextView
                android:id="@+id/tv_spe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt"
                android:layout_marginBottom="@dimen/_10px"
                android:layout_marginTop="@dimen/_10px"
                android:layout_marginLeft="@dimen/_30px"
                android:text="规格:1000 g"/>

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_30px"
                android:layout_marginBottom="@dimen/_30px"
                android:text="订单编号:15191919116161131"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
