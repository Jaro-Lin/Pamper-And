<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_index_bg"
    tools:context=".fragment.SameCityFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_adress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10px"
            android:layout_marginTop="@dimen/_20px"
            android:layout_marginBottom="@dimen/_20px"
            android:text="定位：南宁市西乡塘区华尔街道工谷..."/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_20px"
            android:layout_marginBottom="@dimen/_20px"
            android:src="@mipmap/location_img"/>
        <TextView
            android:id="@+id/tv_getAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10px"
            android:layout_marginRight="@dimen/_10px"
            android:layout_marginTop="@dimen/_20px"
            android:layout_marginBottom="@dimen/_20px"
            android:layout_gravity="center_vertical"
            android:text="重新定位"/>
    </LinearLayout>

    <com.nyw.pets.refresh.MeiTuanRefreshView
        android:id="@+id/refreshview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_data"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_20px"
        android:layout_height="match_parent"/>
    </com.nyw.pets.refresh.MeiTuanRefreshView>
    <TextView
        android:id="@+id/tv_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text=""/>

</LinearLayout>