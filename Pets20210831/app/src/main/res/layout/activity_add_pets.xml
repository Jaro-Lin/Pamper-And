<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/write"
    tools:context=".activity.user.AddPetsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginBottom="@dimen/_30px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:src="@mipmap/btn_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="添加宠物"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:visibility="invisible"
            android:src="@mipmap/btn_back"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="@dimen/_60px"
        android:text="请选择您的宠物类型"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_80px"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llt_dog"
            android:layout_width="@dimen/_200px"
            android:layout_height="@dimen/_200px"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:background="@drawable/add_pets_type_bg_select">
            <ImageView
                android:id="@+id/iv_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dog1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_cat"
            android:layout_width="@dimen/_200px"
            android:layout_height="@dimen/_200px"
            android:layout_marginLeft="@dimen/_60px"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:background="@drawable/add_pets_type_bg_no_select">
            <ImageView
                android:id="@+id/iv_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cat_select_img"/>
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择您的宠物类型"
        android:layout_marginTop="@dimen/_80px"
        android:gravity="center"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/llt_type_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_80px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击选择"
            android:gravity="center"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:src="@mipmap/next_data_img"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px"
        android:layout_marginLeft="@dimen/_200px"
        android:layout_marginTop="@dimen/_150px"
        android:layout_marginRight="@dimen/_200px"
        android:layout_marginBottom="@dimen/_80px"
        android:background="@drawable/register_btn_bg"
        android:text="下一步"
        android:textColor="@color/write"
        android:textSize="@dimen/_36px" />


</LinearLayout>