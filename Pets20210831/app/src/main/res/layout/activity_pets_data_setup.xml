<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/write"
    tools:context=".activity.PetsDataSetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginBottom="@dimen/_30px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:src="@mipmap/btn_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="添加宠物"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:visibility="invisible"
            android:src="@mipmap/del_img_pets"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/gray_vlue"/>
    <TextView
        android:id="@+id/tv_breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_60px"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="品种：苏格兰折耳猫"/>
    <com.nyw.pets.view.RoundImageView
        android:id="@+id/rv_my_img"
        android:layout_width="@dimen/_120px"
        android:layout_height="@dimen/_120px"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30px"
        android:src="@mipmap/my_pets_update_img"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:text="宠物昵称"/>
    <com.nyw.pets.view.ClearEditText
        android:id="@+id/ct_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:textSize="14sp"
        android:background="@null"
        android:hint="在此输入宠物的名称"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:background="@color/grey"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:text="宠物性别"/>
    <LinearLayout
        android:id="@+id/llt_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginTop="@dimen/_15px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:text="请选择宠物性别"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/next_data_img"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/grey"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginLeft="@dimen/_150px"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:text="宠物体重：（kg）"/>
    <LinearLayout
        android:id="@+id/llt_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginTop="@dimen/_15px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="请选择宠物体重"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/next_data_img"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/grey"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginLeft="@dimen/_150px"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:text="出生日期："/>

    <LinearLayout
        android:id="@+id/llt_create_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginTop="@dimen/_15px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_create_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="请选择宠物出生日期"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/next_data_img"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/grey"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginLeft="@dimen/_150px"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:text="绝育情况："/>

    <LinearLayout
        android:id="@+id/llt_sterilization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginTop="@dimen/_15px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sterilization"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="请选择宠物的绝育情况"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/next_data_img"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/grey"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginLeft="@dimen/_150px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:text="宠物健康情况："/>
    <com.nyw.pets.view.ClearEditText
        android:id="@+id/ct_healthy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginTop="@dimen/_20px"
        android:textSize="14sp"
        android:visibility="gone"
        android:background="@null"
        android:hint="在此输入宠物健康情况"/>

    <LinearLayout
        android:id="@+id/llt_healthy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginTop="@dimen/_15px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_healthy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="健康"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/next_data_img"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_return"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginTop="@dimen/_60px"
        android:layout_marginRight="@dimen/_150px"
        android:background="@drawable/get_return_data_gb"
        android:text="返回上一步"
        android:textColor="@color/write"
        android:visibility="gone"
        android:textSize="@dimen/_36px" />
    <Button
        android:id="@+id/btn_add_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginTop="@dimen/_160px"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginBottom="@dimen/_80px"
        android:background="@drawable/register_btn_bg"
        android:text="确定添加"
        android:textColor="@color/write"
        android:textSize="@dimen/_36px" />

    <Button
        android:id="@+id/btn_change_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginTop="@dimen/_160px"
        android:layout_marginRight="@dimen/_150px"
        android:layout_marginBottom="@dimen/_80px"
        android:background="@drawable/register_btn_bg"
        android:text="确定修改"
        android:visibility="gone"
        android:textColor="@color/write"
        android:textSize="@dimen/_36px" />




</LinearLayout>