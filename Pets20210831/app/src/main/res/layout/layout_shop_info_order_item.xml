<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EEEEEE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_10px"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_shopNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_marginRight="@dimen/_60px"
            android:text="共1件商品 合计19.9元"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancelOrder"
                android:layout_width="@dimen/_170px"
                android:layout_height="@dimen/_60px"
                android:textColor="@color/write"
                android:background="@drawable/get_add_pets_gb"
                android:text="取消订单"/>
            <Button
                android:id="@+id/btn_pay"
                android:layout_width="@dimen/_170px"
                android:layout_height="@dimen/_60px"
                android:textColor="@color/write"
                android:layout_marginLeft="@dimen/_30px"
                android:background="@drawable/get_add_pets_gb"
                android:text="去付款"/>
            <Button
                android:id="@+id/btn_after_sales"
                android:layout_width="@dimen/_170px"
                android:layout_height="@dimen/_60px"
                android:textColor="@color/write"
                android:layout_marginLeft="@dimen/_30px"
                android:background="@drawable/get_add_pets_gb"
                android:text="申请售后"/>
            <Button
                android:id="@+id/btn_delivery"
                android:layout_width="@dimen/_170px"
                android:layout_height="@dimen/_60px"
                android:textColor="@color/write"
                android:layout_marginLeft="@dimen/_30px"
                android:visibility="gone"
                android:background="@drawable/get_add_pets_gb"
                android:text="提醒发货"/>

            <Button
                android:id="@+id/btn_logistics"
                android:layout_width="@dimen/_200px"
                android:layout_height="@dimen/_60px"
                android:textColor="@color/write"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_30px"
                android:background="@drawable/get_add_pets_gb"
                android:text="复制物流单号"/>

            <Button
                android:id="@+id/btn_ok_goods"
                android:layout_width="@dimen/_170px"
                android:layout_height="@dimen/_60px"
                android:textColor="@color/write"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_30px"
                android:background="@drawable/get_add_pets_gb"
                android:text="确认收货"/>

            <Button
                android:id="@+id/btn_evaluation"
                android:layout_width="@dimen/_170px"
                android:layout_height="@dimen/_60px"
                android:textColor="@color/write"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_30px"
                android:background="@drawable/get_add_pets_gb"
                android:text="立即评价"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
