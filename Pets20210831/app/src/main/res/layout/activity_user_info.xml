<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".activity.user.UserInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px"
        android:layout_gravity="center_vertical"
        android:background="@color/main_color"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/btn_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_32px"
            android:textColor="@color/write"
            android:visibility="invisible"
            android:text="保存"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_32px"
            android:text="个人信息"/>
        <TextView
            android:id="@+id/tv_saveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_32px"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:textColor="@color/write"
            android:text="保存"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:visibility="invisible"
            android:src="@mipmap/actionbar_back"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llt_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_30px"
            android:text="头像"/>
        <com.nyw.pets.view.RoundImageView
            android:id="@+id/rv_myphoto"
            android:layout_width="@dimen/_120px"
            android:layout_height="@dimen/_120px"
            android:layout_marginLeft="@dimen/_30px"
            android:src="@mipmap/user_app_default"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:src="@mipmap/next_img"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llt_setName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20px"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:text="呢称"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="未填写"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginLeft="@dimen/_15px"
            android:src="@mipmap/next_img"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/gray_vlue"/>

    <LinearLayout
        android:id="@+id/llt_setSex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:layout_gravity ="center_vertical"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:text="性别"/>
        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="未填写"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginLeft="@dimen/_15px"
            android:src="@mipmap/next_img"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/gray_vlue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:text="会员编号"/>
        <TextView
            android:id="@+id/tv_uid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="123456"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginLeft="@dimen/_15px"
            android:src="@mipmap/next_img"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:visibility="gone"
        android:background="@color/gray_vlue"/>


    <LinearLayout
        android:id="@+id/llt_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:text="手机号码"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="未填写"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginLeft="@dimen/_15px"
            android:src="@mipmap/next_img"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/gray_vlue"/>

    <LinearLayout
        android:id="@+id/llt_create"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:text="出生日期"/>
        <TextView
            android:id="@+id/tv_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="未填写"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginLeft="@dimen/_15px"
            android:src="@mipmap/next_img"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/gray_vlue"/>


    <LinearLayout
        android:id="@+id/llt_adress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:text="城市"/>
        <TextView
            android:id="@+id/tv_adress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="未填写"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginLeft="@dimen/_15px"
            android:src="@mipmap/next_img"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/gray_vlue"/>

    <LinearLayout
        android:id="@+id/llt_introduction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:text="简介"/>
        <TextView
            android:id="@+id/tv_introduction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="未填写"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginLeft="@dimen/_15px"
            android:src="@mipmap/next_img"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/gray_vlue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/write"
            android:layout_marginLeft="@dimen/_100px"
            android:layout_marginRight="@dimen/_100px"
            android:layout_marginBottom="@dimen/_60px"
            android:text="退出登录"
            android:background="@drawable/get_del_shop_ok_gb"/>
    </LinearLayout>


</LinearLayout>