<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".activity.shop.RequestAfterSalesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/btn_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30px"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:text="申请售后"/>
        <ImageView
            android:id="@+id/iv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:src="@mipmap/customer_service_img"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_20px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_shopImg"
            android:layout_width="@dimen/_150px"
            android:layout_height="@dimen/_150px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30px"
            android:scaleType="centerCrop"
            android:src="@mipmap/http_error"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="狗狗食物超级好吃的零食营养的食物优惠"/>
            <TextView
                android:id="@+id/tv_spe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt"
                android:layout_marginBottom="@dimen/_10px"
                android:layout_marginTop="@dimen/_10px"
                android:layout_marginLeft="@dimen/_30px"
                android:text="规格:1000 g"/>

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_30px"
                android:layout_marginBottom="@dimen/_30px"
                android:text="订单编号:15191919116161131"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_10px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:textSize="16sp"
            android:text="售后类型"/>
        <Spinner
            android:id="@+id/sp_afterSalesType"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30px"
            android:visibility="gone"
            android:layout_marginRight="@dimen/_30px"
            android:text="请选择售后类型"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next_data_img"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:textSize="16sp"
            android:text="货物状态"/>
        <Spinner
            android:id="@+id/sp_shopStateType"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:visibility="gone"
            android:text="请选择货物状态"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next_data_img"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:textSize="16sp"
            android:text="退货原因"/>
        <Spinner
            android:id="@+id/sp_no_shop_why"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:visibility="gone"
            android:text="请选择退货原因"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next_data_img"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:textSize="16sp"
            android:text="退款金额"/>
        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:textSize="16sp"
            android:background="@null"
            android:hint="￥ 请输入退款金额"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/_100px"
            android:text="退款说明"/>
        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginBottom="@dimen/_100px"
            android:background="@null"
            android:textSize="16sp"
            android:hint="请填写退款原因..."/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:layout_marginTop="@dimen/_10px"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_img"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_addImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_60px"
            android:layout_marginTop="@dimen/_60px"
            android:layout_marginBottom="@dimen/_60px"
            android:src="@mipmap/update_shop_img"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/_250px"
            android:layout_height="@dimen/_60px"
            android:textColor="@color/write"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:layout_marginBottom="@dimen/_30px"
            android:background="@drawable/get_del_shop_ok_gb"
            android:text="确认申请"/>


    </LinearLayout>








</LinearLayout>