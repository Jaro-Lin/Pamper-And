<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".activity.shop.AfterSalesDetailedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100px"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:background="@color/write"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30px"
                android:src="@mipmap/btn_back"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的售后详细"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/iv_service"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/_30px"
                android:layout_height="wrap_content"
                android:src="@mipmap/customer_service_img"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px"
            android:background="@color/gray_vlue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/write"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llt_shopInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_shopImg"
                    android:layout_width="@dimen/_200px"
                    android:layout_height="@dimen/_200px"
                    android:layout_marginLeft="@dimen/_30px"
                    android:layout_marginTop="@dimen/_30px"
                    android:layout_marginBottom="@dimen/_30px"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/http_error"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/_20px"
                        android:layout_marginTop="@dimen/_30px"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:text="狗狗食物超级好吃的零食营养的食物优惠"/>

                    <TextView
                        android:id="@+id/tv_specifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt"
                        android:layout_marginLeft="@dimen/_20px"
                        android:layout_marginTop="@dimen/_80px"
                        android:text="规格:1000 g"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10px"
                android:background="#EEEEEE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30px"
                android:layout_marginRight="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="售后类型"/>
                <TextView
                    android:id="@+id/tv_stateType"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="退货退款"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30px"
                android:layout_marginRight="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="退款金额"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="￥ 19.9"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30px"
                android:layout_marginRight="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="退款状态"/>
                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="已退款"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30px"
                android:layout_marginRight="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:layout_marginBottom="@dimen/_30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="订单编号"/>
                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="056198189191126161231"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10px"
                android:background="#EEEEEE"/>


            <LinearLayout
                android:id="@+id/llt_logistics_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30px"
                android:layout_marginRight="@dimen/_30px"
                android:layout_marginTop="@dimen/_30px"
                android:layout_marginBottom="@dimen/_30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="退货物流订单"/>
                <TextView
                    android:id="@+id/tv_logistics_id"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="056198189191126161231"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>




</LinearLayout>