<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/write"
    android:layout_marginTop="@dimen/_20px"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <com.nyw.pets.view.RoundImageView
            android:id="@+id/riv_name_img"
            android:layout_width="@dimen/_100px"
            android:layout_height="@dimen/_100px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_logo"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_20px"
            android:layout_marginRight="@dimen/_30px"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="这是标题呢称"/>
            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这是内容"
                android:layout_marginTop="@dimen/_20px"
                android:lineSpacingExtra="@dimen/_5px" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_delDynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_60px"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:text="删除"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_commentReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/_10px"
        android:layout_marginTop="@dimen/_20px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_50px"
        android:background="@color/my_index_bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_commentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF23A0F0"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginTop="@dimen/_15px"
            android:layout_marginBottom="@dimen/_15px"
            android:text="LilyWang "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_10px"
            android:layout_marginTop="@dimen/_15px"
            android:layout_marginBottom="@dimen/_15px"
            android:text="等人"/>
        <TextView
            android:id="@+id/tv_commentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF23A0F0"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_marginRight="@dimen/_30px"
            android:layout_marginTop="@dimen/_15px"
            android:layout_marginBottom="@dimen/_15px"
            android:text="共2条回复"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/_20px"
        android:layout_marginTop="@dimen/_20px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_150px"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="2020-05-12"/>
        <TextView
            android:id="@+id/tv_sendComment"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="评论"/>
        <ImageView
            android:id="@+id/iv_thumbs"
            android:layout_width="@dimen/_36px"
            android:layout_height="@dimen/_36px"
            android:layout_marginRight="@dimen/_10px"
            android:layout_marginLeft="@dimen/_60px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/no_thumbs_my_img"/>

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_marginRight="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="2266"/>

    </LinearLayout>

</LinearLayout>
