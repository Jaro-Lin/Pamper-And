<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PetResearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100px"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:background="@color/write"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30px"
                android:src="@mipmap/btn_back"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="宠物调查"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/_30px"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:visibility="invisible"
                android:text="添加"/>

        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_60px"
        android:layout_marginBottom="@dimen/_30px"
        android:layout_marginLeft="@dimen/_30px"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:text="最近是否有注射三联疫苗或者六联疫苗？"/>
    <CheckBox
        android:id="@+id/cb_allSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:button="@null"
        android:drawableLeft="@drawable/checkbox_shop_cart_selector"
        android:layout_marginTop="@dimen/_60px"
        android:layout_marginBottom="@dimen/_30px"
        android:layout_marginRight="@dimen/_60px"
        android:layout_marginLeft="@dimen/_30px"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/llt_vaccine_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:textColor="@color/black"
            android:text="上次注射疫苗时间"/>
        <TextView
            android:id="@+id/tv_vaccine_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:textColor="@color/black"
            android:text="点击选择时间"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_vaccinesNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:textColor="@color/black"
            android:text="总共打了几针疫苗"/>
        <TextView
            android:id="@+id/tv_vaccinesNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:textColor="@color/black"
            android:text="1 针"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_60px"
        android:background="@color/gray_vlue"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:text="最近是否有注射狂犬疫苗"/>
        <CheckBox
            android:id="@+id/cb_rabiesVaccineSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_shop_cart_selector"
            android:layout_marginTop="@dimen/_60px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:layout_marginLeft="@dimen/_30px"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_rabiesVaccineSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:textColor="@color/black"
            android:text="上次注射疫苗时间"/>
        <TextView
            android:id="@+id/tv_rabiesVaccineSelectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:textColor="@color/black"
            android:text="点击选择时间"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_rabiesVaccineSelectNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:textColor="@color/black"
            android:text="总共打了几针疫苗"/>
        <TextView
            android:id="@+id/tv_rabiesVaccineSelectNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:textColor="@color/black"
            android:text="1 针"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_60px"
        android:background="@color/gray_vlue"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60px"
            android:layout_marginBottom="@dimen/_60px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:text="最近是否有驱虫"/>
        <CheckBox
            android:id="@+id/cb_dewormingSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_shop_cart_selector"
            android:layout_marginTop="@dimen/_60px"
            android:layout_marginBottom="@dimen/_60px"
            android:layout_marginRight="@dimen/_60px"
            android:layout_marginLeft="@dimen/_30px"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_dewormingSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:textColor="@color/black"
            android:text="上次驱虫时间"/>
        <TextView
            android:id="@+id/tv_dewormingSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:textColor="@color/black"
            android:text="点击选择时间"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_30px"
        android:background="@color/gray_vlue"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:text="最近是否有洗澡"/>
        <CheckBox
            android:id="@+id/cb_takeBathSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_shop_cart_selector"
            android:layout_marginTop="@dimen/_60px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:layout_marginLeft="@dimen/_30px"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_takeBathSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:textColor="@color/black"
            android:text="上次洗澡时间"/>
        <TextView
            android:id="@+id/tv_takeBathSelectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:textColor="@color/black"
            android:text="点击选择时间"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_60px"
        android:background="@color/gray_vlue"/>

            <LinearLayout
                android:id="@+id/llt_recently"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_30px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_30px"
                    android:layout_marginTop="@dimen/_30px"
                    android:layout_marginLeft="@dimen/_30px"
                    android:textColor="@color/black"
                    android:text="最近一次打疫苗的时间"/>
                <TextView
                    android:id="@+id/tv_recently"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_30px"
                    android:layout_marginTop="@dimen/_30px"
                    android:layout_marginRight="@dimen/_60px"
                    android:textColor="@color/black"
                    android:text="点击选择时间"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1px"
                android:layout_marginTop="@dimen/_30px"
                android:background="@color/gray_vlue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:text="驱虫间隔设置"/>
        <Spinner
            android:id="@+id/sp_dewormingInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:textColor="@color/black" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_30px"
        android:background="@color/gray_vlue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:text="洗澡间隔设置"/>
        <Spinner
            android:id="@+id/sp_bathInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30px"
            android:layout_marginBottom="@dimen/_30px"
            android:layout_marginRight="@dimen/_60px"
            android:textColor="@color/black" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_30px"
        android:background="@color/gray_vlue"/>

    <Button
        android:id="@+id/btn_initPets"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px"
        android:layout_marginLeft="@dimen/_200px"
        android:layout_marginTop="@dimen/_60px"
        android:layout_marginRight="@dimen/_200px"
        android:layout_marginBottom="@dimen/_80px"
        android:background="@drawable/register_btn_bg"
        android:text="提交"
        android:textColor="@color/write"
        android:textSize="@dimen/_36px" />


        </LinearLayout>
    </ScrollView>



</LinearLayout>