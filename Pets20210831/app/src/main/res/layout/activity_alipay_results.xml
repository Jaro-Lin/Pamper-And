<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textColor="@color/black"
        android:layout_marginRight="@dimen/_30px"
        android:gravity="right"
        android:layout_marginTop="@dimen/_60px"
        android:textSize="@dimen/_32px"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_80px" />
    <TextView
        android:id="@+id/tv_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付成功"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30px"
        android:textColor="@color/recharge_bg"/>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+50"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="@dimen/_50px"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_100px"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px"
            android:layout_weight="1"
            android:textColor="@color/txt"
            android:text="付款方式"/>
        <TextView
            android:id="@+id/tv_payType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:textColor="@color/black"
            android:text="支付宝"/>
    </LinearLayout>
</LinearLayout>
