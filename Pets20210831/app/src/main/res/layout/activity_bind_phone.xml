<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.user.BindPhoneActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/main_color"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/_30px"
            android:src="@mipmap/actionbar_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="绑定手机"
            android:gravity="center"
            android:textSize="@dimen/_36px"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/_30px"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@mipmap/actionbar_back"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llt_changePassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_20px"
        android:gravity="center"
        android:orientation="horizontal">
        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_inputPhone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:background="@color/write"
            android:textSize="@dimen/_33px"
            android:layout_marginLeft="@dimen/_30px" />
        <Button
            android:id="@+id/btn_sendCode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60px"
            android:layout_marginRight="@dimen/_30px"
            android:background="@drawable/get_code_btn_gb"
            android:textColor="@color/main_color"
            android:text="获取验证码"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/gray_vlue"/>
    <LinearLayout
        android:id="@+id/llt_input_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal">
        <com.nyw.pets.view.ClearEditText
            android:id="@+id/ct_inputCode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入手机验证码"
            android:background="@color/write"
            android:textSize="@dimen/_33px"
            android:layout_marginLeft="@dimen/_30px" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_100px"
        android:layout_marginLeft="@dimen/_150px"
        android:layout_marginRight="@dimen/_150px"
        android:text="绑定并登录"
        android:background="@drawable/ok_gb"/>

</LinearLayout>